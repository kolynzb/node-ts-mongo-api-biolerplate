{
  "name": "node-ts-mongo-api",
  "version": "1.0.0",
  "description": "Node js typescript mongo db API setup",
  "main": "src/server.ts",
  "repository": "https://github.com/kolynzb/nest-API.git",
  
  "scripts": {
    "dev": "nodemon",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/server.js",
    "build": "npm run clean && swc ./src -d dist && node ./scripts/copyDirToBuild.js",
    "start": "node -r module-alias/register dist/server.js",
    "start:dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "start:prod": "NODE_ENV=production node -r module-alias/register Â dist/server.js",
    "clean": "rimraf dist"
  },
  "keywords": [],
  "author": "kolynzb <collinsbenda360@gmail.com> (https://atuhaire.com)",
  "license": "MIT",
  "engines": {
    "node": "v18.16.1",
    "yarn": "1.22.19",
    "pnpm": "8.1.1"
  },
  "_moduleAliases": {
    "@controllers": "dist/controllers",
    "@services": "dist/services",
    "@middleware": "dist/middleware",
    "@config": "dist/config",
    "@routes": "dist/routes",
    "@utils": "dist/utils",
    "@schemas": "dist/schemas",
    "@interfaces": "dist/interfaces",
    "@types": "dist/types"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.68",
    "@tsconfig/node18": "^1.0.3",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.0",
    "fs-extra": "^11.1.1",
    "module-alias": "^2.2.3",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
